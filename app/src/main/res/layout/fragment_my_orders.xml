<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MyOrders_Fragment"
    android:orientation="vertical">
<TextView
    android:id="@+id/heading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:text="Last Order Details"
   android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"

    android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_current_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
       cardCornerRadius="5dp"
        android:visibility="gone"
        cardElevation="5dp">

        <LinearLayout
            android:id="@+id/current_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="recent"
                android:textSize="16dp"
                android:padding="5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_id"
                    android:fontFamily="@font/chivo"
                    android:layout_alignParentStart="true"
                    android:text="order id "
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_amount"
                    android:fontFamily="@font/chivo"
                    android:text="order total "
                    android:layout_marginRight="5dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:padding="5dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/delivery_date"
                    android:fontFamily="@font/chivo"
                    android:layout_alignParentStart="true"
                    android:text="date "
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"

                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/delivery_time"
                    android:fontFamily="@font/chivo"
                    android:text="time "
                    android:layout_marginRight="5dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:padding="5dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/chivo"
                    android:layout_alignParentStart="true"
                    android:text="Status :"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"

                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status"
                    android:fontFamily="@font/chivo"
                    android:text="status "
                    android:layout_marginRight="5dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:padding="5dp"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/chivo"
                        android:layout_alignParentStart="true"
                        android:text="Pick Up from: "
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"

                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/vendor_name"
                        android:fontFamily="@font/chivo"
                        android:layout_alignParentStart="true"
                        android:text="Vendor name "
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/vendor_add"
                        android:fontFamily="@font/chivo"
                        android:layout_alignParentStart="true"
                        android:text="vendor add "
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/vendor_mobile"
                        android:fontFamily="@font/chivo"
                        android:layout_alignParentStart="true"
                        android:text="vendor mobile "
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        android:padding="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/chivo"
                        android:layout_alignParentStart="true"
                        android:text="Deliver To: "
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"

                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_name"
                        android:fontFamily="@font/chivo"
                        android:layout_alignParentStart="true"
                        android:text="user name"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_add"
                        android:fontFamily="@font/chivo"
                        android:layout_alignParentStart="true"
                        android:text="user add "
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_mobile"
                        android:fontFamily="@font/chivo"
                        android:layout_alignParentStart="true"
                        android:text="user mobile"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        android:padding="5dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orders_recycler"
        android:layout_margin="10dp"/>
</LinearLayout>
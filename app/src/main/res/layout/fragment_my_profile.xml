<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.MyProfile_Fragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
       >

        <ImageView
            android:id="@+id/img_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
            android:padding="10dp"
       android:layout_alignParentEnd="true"
        android:background="@drawable/icons8_edit_60px"
        android:backgroundTint="@color/white"
            android:visibility="gone"/>



    </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_img"
        android:layout_below="@+id/rel1"
        android:layout_marginTop="-100dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@mipmap/ic_launcher_round"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_img"
        android:layout_margin="10dp"

        android:id="@+id/card_profile">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

           <TextView
               android:id="@+id/user_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="16dp"
               android:padding="5dp"
               android:textAlignment="center"
               android:text="user_id"
               android:textColor="@android:color/black"
               android:textStyle="bold"
               android:fontFamily="@font/chivo"
               android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="5dp"

                android:text="Name :"
                android:fontFamily="@font/chivo"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="user_id"
                android:textColor="@android:color/black"
                android:fontFamily="@font/chivo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:text="Mobile No :"
                    android:fontFamily="@font/chivo"/>
                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="user_id"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/chivo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_add"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:text="Address :"
                    android:fontFamily="@font/chivo"/>
                <TextView
                    android:id="@+id/user_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="user_id"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/chivo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtadhar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="5dp"

                    android:text="Adhaar No :"
                    android:fontFamily="@font/chivo"/>
                <TextView
                    android:id="@+id/user_adhar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="user_id"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/chivo"/>
            </LinearLayout>
            <TextView
                android:id="@+id/vvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="5dp"
                android:textAlignment="center"
                android:text="Vehicle Details"
                android:textStyle="bold"
                android:fontFamily="@font/chivo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_v"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="5dp"

                    android:text="Vehicle Name :"
                    android:fontFamily="@font/chivo"/>
                <TextView
                    android:id="@+id/v_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="user_id"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/chivo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_vv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="5dp"

                    android:text="Vehicle No :"
                    android:fontFamily="@font/chivo"/>
                <TextView
                    android:id="@+id/v_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="user_id"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/chivo"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/change_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:text="Change Password"
            android:layout_marginRight="@dimen/space_10"
            android:textColor="@color/text_color"
            android:fontFamily="@font/chivo"/>
</LinearLayout>
    </ScrollView>



</RelativeLayout>
                android:textColor="@android:color/black"
                android:padding="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="User Name:"

                    android:textSize="16dp"
                    android:fontFamily="@font/chivo"
                    android:textColor="@android:color/black"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="order_id"

                    android:textSize="16dp"
                    android:fontFamily="@font/chivo"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="User Address"

                    android:textSize="16dp"
                    android:fontFamily="@font/chivo"
                    android:textColor="@android:color/black"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/user_add"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="order_id"

                    android:textSize="16dp"
                    android:fontFamily="@font/chivo"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="User Contact:"
                    android:textSize="16dp"
                    android:fontFamily="@font/chivo"
                    android:textColor="@android:color/black"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/user_mobile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="order_id"

                    android:textSize="16dp"
                    android:fontFamily="@font/chivo"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Order Status:"
                    android:textSize="16dp"
                    android:fontFamily="@font/chivo"
                    android:textColor="@android:color/black"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/user"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="order_id"
                    android:textSize="16dp"
                    android:fontFamily="@font/chivo"
                    android:textStyle="bold"

                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remarks"
                android:textAlignment="center"
                android:textSize="16dp"
                android:fontFamily="@font/chivo"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/tv_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remarks"
                android:textAlignment="center"
                android:textSize="16dp"
                android:fontFamily="@font/chivo"

                android:padding="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
    </ScrollView>
</RelativeLayout>

                android:layout_height="wrap_content"
                android:text="Note :"
                android:padding="@dimen/space_5"
                android:layout_marginLeft="@dimen/space_5"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_small" />

            <TextView
